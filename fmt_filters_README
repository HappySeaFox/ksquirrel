-------------------------------------------------------------------

Qt example:
-----------

QImage im;

im.load("sample.png");

im = im.convertDepth(32);

fmt_filters::image img(sample.bits(), sample.width(), sample.height());

fmt_filters::implode(img, 50, fmt_filters::white);

QPixmap p;

p.convertFromImage(im);

pixmapLabel->setPixmap(p);
